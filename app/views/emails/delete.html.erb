<h1>Delete Page</h1>
<%= link_to('Back to Email List', emails_path, class: "btn btn-primary") %><br />

<div>
    <h2>Delete Email</h2>

    <%= form_for(@email, method: 'delete') do |e| %>
        <% # url: email_path(@email). method: 'delete'%>
        <p>Are you sure you want to delete this Email permanently? </p>
        <p><%= @email.email_address %></p>

        <div class="form-buttons">
            <%= e.submit("Delete Email", class: "btn btn-primary")%>
        </div>

    <% end %>
</div>

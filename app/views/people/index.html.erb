<h1>Index Page</h1>

<%= link_to('Back to Home', root_path, class: "btn btn-primary") %><br /><br />

<div>
    <h2>People</h2>
    <h4>Use: Person ID to add corresponding Emais,Addresses, & Phone Numbers</h4>

    <%= link_to("Add New Person", new_person_path, class: 'action new btn btn-primary')%>
    
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Person ID</th>
                    <th scope="col">Salutation</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Middle Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">SSN</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Comment</th>
                </tr>
            </thead>
            <% @people.each do |person| %>
                <%= render 'person_row', person: person %>
            <% end %>
        </table>

    
    
</div>

